---
import { SITE_TITLE } from "../consts";
import DarkModeToggle from "./DarkModeToggle.tsx";
import HeaderLink from "./HeaderLink.astro";
---

<header
  class="border-b border-slate-600 dark:border-slate-600 border-slate-200 mb-8"
>
  <nav class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
    <h1 class="text-xl font-semibold">
      <a
        href="/"
        class="text-slate-900 dark:text-slate-50 hover:text-blue-500 dark:hover:text-blue-400 transition-colors"
      >
        {SITE_TITLE}
      </a>
    </h1>

    <div class="flex items-center gap-6">
      <div class="flex items-center gap-4">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
      </div>

      <div class="flex items-center gap-2">
        <DarkModeToggle client:load />
      </div>
    </div>
  </nav>
</header>
